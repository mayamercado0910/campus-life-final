  <!-- Bootstrap Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    document.addEventListener("DOMContentLoaded", () => {

      // Highlight the current page link
      const pageName = window.location.pathname.split("/").pop();
      document.querySelectorAll(".nav-link").forEach(link => {
        if (link.getAttribute("href") === pageName) {
          link.classList.add("active");
        }
      });

      // Time-based greeting message
      const title = document.getElementById("header-text");
      const currentHour = new Date().getHours();
      let welcomeMsg = "Dining at Mount Mary University";

      if (currentHour >= 5 && currentHour < 12) {
        welcomeMsg = "Good Morning — Enjoy Your Meal at MMU Dining";
      } else if (currentHour >= 12 && currentHour < 18) {
        welcomeMsg = "Good Afternoon — Explore MMU Dining Options";
      } else {
        welcomeMsg = "Good Evening — Welcome to MMU Dining Services";
      }

      title.textContent = welcomeMsg;
    });
  </script>

