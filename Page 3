  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      
      /* Highlight current nav link */
      const path = window.location.pathname.split("/").pop();
      document.querySelectorAll(".nav-link").forEach(link => {
        if (link.getAttribute("href") === path) {
          link.classList.add("active");
        }
      });

      /* Click-to-expand event details */
      document.querySelectorAll("#event-list li").forEach(item => {
        item.style.cursor = "pointer";
        item.addEventListener("click", () => {
          let extra = item.querySelector(".extra-info");

          if (extra) {
            extra.remove();
          } else {
            const paragraph = document.createElement("div");
            paragraph.className = "extra-info mt-2 text-muted small fst-italic";
            paragraph.textContent = "Additional event info will be provided here (speakers, RSVP links, etc.).";
            item.appendChild(paragraph);
          }
        });
      });

      /* Dynamic greeting */
      const heading = document.getElementById("dynamic-heading");
      const hour = new Date().getHours();

      if (hour < 12) {
        heading.textContent = "Good Morning — Explore Upcoming Events!";
      } else if (hour < 18) {
        heading.textContent = "Good Afternoon — See What’s Happening on Campus!";
      } else {
        heading.textContent = "Good Evening — Stay Updated on Campus Activities!";
      }
    });
  </script>

